        <Label Content="Login" HorizontalAlignment="Left" Margin="149,108,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="149,164,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.042,-0.366"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="194,231,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
